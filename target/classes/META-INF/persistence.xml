<persistence>

  <!-- 永続化ユニット単位でpersistenceタグをつける。名前はなんでもOK -->
  <!-- transaction-type="JTA"はトランザクション管理をWebコンテナに任せるという設定。基本はこれでOK -->
  <persistence-unit name="postgresDS" transaction-type="JTA">
    <!-- standalone.xmlで指定した名前（JNDI）を指定 -->
    <jta-data-source>java:/PostgresDS</jta-data-source>
    <properties>
      <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
    </properties>
  </persistence-unit>

</persistence>